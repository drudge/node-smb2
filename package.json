{
  "name": "node-smb2",
  "description": "A SMB2 implementation in TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/drudge/node-smb2.git"
  },
  "bugs": {
    "url": "https://github.com/drudge/node-smb2/issues"
  },
  "homepage": "https://github.com/drudge/node-smb2#readme",
  "version": "1.3.5",
  "author": "Nick Penree <nick@penree.com>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "nodemon",
    "build": "tsc --build",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "smb2",
    "smb",
    "cifs",
    "samba",
    "server-message-block",
    "windows",
    "file-sharing"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "des.js": "^1.1.0",
    "js-md4": "^0.3.2",
    "moment-timezone": "^0.6.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
